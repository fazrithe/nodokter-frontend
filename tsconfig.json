  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/home/dashboard/FlashSale.tsx", "components/product/singleProduct.jsx", "components/product/singleProduct.jsx", "components/product/items/detail.jsx", "components/product/items/detail.jsx", "components/product/items/GalleryProduct.jsx", "components/product/items/GalleryProduct.jsx"],
  "exclude": ["node_modules"]
}
